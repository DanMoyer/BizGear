        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="1053" Closing="OnClosing">
    <Grid Margin="0,0,-58,-4" HorizontalAlignment="Left" Width="1050">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Start"  Content="Start" HorizontalAlignment="Left" Margin="39,39,0,0" VerticalAlignment="Top" Width="75" Click="OnStart" Height="22"/>
        <Button x:Name="Stop" Content="Stop" HorizontalAlignment="Left" Margin="176,39,0,0" VerticalAlignment="Top" Width="75" Click="OnStop" Height="22"/>
        <ListBox x:Name="EventsList" HorizontalAlignment="Left" Height="177" Margin="39,113,0,0" VerticalAlignment="Top" Width="941"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="278,75,0,0" VerticalAlignment="Top" Width="75" Click="OnClear" Height="22"/>
    </Grid>
</Window>
